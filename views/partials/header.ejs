<!-- Spacer for fixed header -->
<div style="height:6.25rem;"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    let open = false;

    btn.addEventListener('click', () => {
        open = !open;
        if (open) {
            menu.classList.remove('opacity-0', 'invisible', '-translate-y-3');
            btn.innerHTML = '<i class="fas fa-times text-lg"></i><span class="ml-2 text-sm">Close</span>';
        } else {
            menu.classList.add('opacity-0', 'invisible', '-translate-y-3');
            btn.innerHTML = '<i class="fas fa-bars text-lg"></i><span class="ml-2 text-sm">Menu</span>';
        }
    });
});
</script>
