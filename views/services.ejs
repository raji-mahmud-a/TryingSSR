<!-- Page Header -->
<section class="relative bg-gradient-to-br from-gray-50 to-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-navy-800 mb-4">Our Properties</h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover your perfect property from our exclusive collection</p>
            <nav class="mt-6">
                <ol class="flex justify-center items-center space-x-2 text-sm">
                    <li><a href="/" class="text-brand-600 hover:text-brand-700">Home</a></li>
                    <li><span class="text-gray-400">/</span></li>
                    <li class="text-gray-600">Properties</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<!-- Filter Section -->
<section class="sticky top-20 z-30 bg-white shadow-sm py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex flex-wrap items-center gap-2">
                <a href="/projects" 
                   class="px-4 py-2 rounded-lg <%= currentCategory === 'all' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %> transition-colors">
                    All Properties
                </a>
                <% categories.forEach(category => { %>
                <a href="/projects?category=<%= category %>" 
                   class="px-4 py-2 rounded-lg <%= currentCategory === category ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %> transition-colors">
                    <%= category %>
                </a>
                <% }); %>
            </div>
            
            <div class="text-sm text-gray-500">
                Showing <%= projects.length %> properties
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <% if (projects && projects.length > 0) { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% projects.forEach(project => { %>
            <div class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="relative overflow-hidden rounded-t-xl">
                    <img src="<%= project.image %>" 
                         alt="<%= project.title %>" 
                         class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500">
                         
                    <!-- Badges -->
                    <div class="absolute top-4 left-4 flex flex-col gap-2">
                        <% if (project.featured) { %>
                        <span class="px-3 py-1 rounded-full text-xs font-semibold bg-amber-500 text-white">
                            Featured
                        </span>
                        <% } %>
                        <span class="px-3 py-1 rounded-full text-xs font-semibold bg-brand-500 text-white">
                            <%= project.status %>
                        </span>
                    </div>
                    
                    <!-- Price -->
                    <div class="absolute bottom-4 right-4">
                        <span class="px-4 py-2 rounded-lg text-sm font-bold bg-navy-800/90 text-white backdrop-blur-sm">
                            <%= project.price %>
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    <h3 class="text-xl font-bold text-navy-800 mb-2"><%= project.title %></h3>
                    
                    <div class="flex items-center text-gray-600 mb-4">
                        <i class="fas fa-map-marker-alt text-brand-500 mr-2"></i>
                        <span class="text-sm"><%= project.location %></span>
                    </div>
                    
                    <p class="text-gray-600 mb-6"><%= project.description %></p>
                    
                    <!-- Specs -->
                    <div class="grid grid-cols-3 gap-4 p-4 bg-gray-50 rounded-lg mb-6">
                        <div class="text-center">
                            <i class="fas fa-bed text-brand-500 mb-1"></i>
                            <div class="text-sm font-semibold text-navy-800"><%= project.bedrooms %></div>
                            <div class="text-xs text-gray-500">Beds</div>
                        </div>
                        <!-- Repeat for baths and area -->
                    </div>
                    
                    <div class="flex gap-4">
                        <a href="/projects/<%= project.slug %>" 
                           class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-brand-500 text-white rounded-lg hover:bg-brand-600 transition-colors">
                            View Details
                        </a>
                        <button class="p-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-16">
            <div class="mb-6">
                <i class="fas fa-home text-6xl text-gray-300"></i>
            </div>
            <h3 class="text-2xl font-bold text-navy-800 mb-2">No Properties Found</h3>
            <p class="text-gray-600 mb-8">We couldn't find any properties matching your criteria.</p>
            <a href="/projects" 
               class="inline-flex items-center px-6 py-3 bg-brand-500 text-white rounded-lg hover:bg-brand-600 transition-colors">
                View All Properties
            </a>
        </div>
        <% } %>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-gradient-to-br from-navy-800 to-navy-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Can't Find What You're Looking For?</h2>
        <p class="text-xl text-gray-300 mb-8">Let us help you find your perfect property</p>
        <a href="/contact" 
           class="inline-flex items-center px-6 py-3 bg-brand-500 text-white rounded-lg hover:bg-brand-600 transition-colors">
            <i class="fas fa-search mr-2"></i>
            Custom Property Search
        </a>
    </div>
</section>

