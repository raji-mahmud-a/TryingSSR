<%- include('partials/header') %>

<section class="error-page py-5" style="min-height: 60vh;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto text-center">
                <div class="error-content">
                    <div class="error-code mb-4">
                        <h1 class="display-1 fw-bold text-primary">404</h1>
                    </div>
                    <h2 class="fw-bold mb-3">Page Not Found</h2>
                    <p class="lead text-muted mb-4">The page you're looking for doesn't exist or has been moved.</p>
                    
                    <% if (typeof requestedUrl !== 'undefined') { %>
                    <div class="alert alert-info">
                        <small>Requested: <code><%= requestedUrl %></code></small>
                    </div>
                    <% } %>
                    
                    <% if (typeof suggestion !== 'undefined' && suggestion) { %>
                    <div class="mb-4">
                        <p class="text-muted">Did you mean:</p>
                        <a href="<%= suggestion %>" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-right me-1"></i>Go to <%= suggestion %>
                        </a>
                    </div>
                    <% } %>
                    
                    <div class="error-actions">
                        <a href="/" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <a href="/contact" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
