<!-- Featured Services -->
<% if (featuredServices && featuredServices.length > 0) { %>
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-navy-100 text-navy-700 text-sm font-medium mb-4">
                <i class="fas fa-concierge-bell mr-2"></i>
                Our Premium Services
            </div>
            <h2 class="text-4xl lg:text-5xl font-bold text-navy-800 mb-6">
                Comprehensive Real Estate
                <span class="bg-gradient-to-r from-brand-500 to-brand-600 bg-clip-text text-transparent">Solutions</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                From buying your first home to managing investment portfolios, we've got you covered.
            </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
            <% featuredServices.forEach((service, index) => { %>
            <div class="group animate-on-scroll bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 border border-gray-100" style="animation-delay: <%= index * 0.1 %>s;">
                <div class="relative mb-6">
                    <div class="w-full h-48 bg-gradient-to-br from-brand-100 to-brand-200 rounded-2xl flex items-center justify-center group-hover:from-brand-200 group-hover:to-brand-300 transition-all duration-300">
                        <i class="fas fa-<%= service.icon %> text-4xl text-brand-600"></i>
                    </div>
                    <div class="absolute -top-3 -right-3 w-8 h-8 bg-brand-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-star text-white text-xs"></i>
                    </div>
                </div>
                
                <h3 class="text-2xl font-bold text-navy-800 mb-4 group-hover:text-brand-700 transition-colors duration-300">
                    <%= service.title %>
                </h3>
                
                <p class="text-gray-600 mb-6 leading-relaxed">
                    <%= service.shortDescription || service.description.substring(0, 120) + '...' %>
                </p>
                
                <% if (service.features && service.features.length > 0) { %>
                <div class="mb-6">
                    <h4 class="text-sm font-semibold text-navy-700 mb-3">Key Features:</h4>
                    <ul class="space-y-2">
                        <% service.features.slice(0, 3).forEach(feature => { %>
                        <li class="flex items-center text-sm text-gray-600">
                            <i class="fas fa-check-circle text-brand-500 mr-2"></i>
                            <%= feature %>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>
                
                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                    <% if (service.price) { %>
                    <div>
                        <div class="text-sm text-gray-500">Starting from</div>
                        <div class="font-bold text-brand-600"><%= service.price %></div>
                    </div>
                    <% } %>
                    
                    <a href="/services/<%= service.slug %>" class="group bg-gradient-to-r from-brand-500 to-brand-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-brand-600 hover:to-brand-700 transition-all duration-300 transform hover:scale-105 flex items-center">
                        Learn More
                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300"></i>
                    </a>
                </div>
            </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12 animate-on-scroll">
            <a href="/services" class="group bg-navy-800 text-white px-8 py-4 rounded-xl font-semibold hover:bg-navy-900 transition-all duration-300 transform hover:scale-105 inline-flex items-center">
                View All Services
                <i class="fas fa-arrow-right ml-3 group-hover:translate-x-1 transition-transform duration-300"></i>
            </a>
        </div>
    </div>
</section>
<% } %>

<!-- Featured Projects -->
<% if (featuredProjects && featuredProjects.length > 0) { %>
<section class="py-20 bg-gradient-to-br from-gray-50 to-brand-50/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-brand-100 text-brand-700 text-sm font-medium mb-4">
                <i class="fas fa-building mr-2"></i>
                Featured Properties
            </div>
            <h2 class="text-4xl lg:text-5xl font-bold text-navy-800 mb-6">
                Handpicked Premium
                <span class="bg-gradient-to-r from-brand-500 to-brand-600 bg-clip-text text-transparent">Properties</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Discover our carefully selected collection of exceptional properties that define luxury living.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 xl:grid-cols-4 gap-8">
            <% featuredProjects.forEach((project, index) => { %>
                <% const primaryImage = project.getPrimaryImage(); %>
            <div class="group animate-on-scroll bg-white rounded-3xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-3" style="animation-delay: <%= index * 0.1 %>s;">
                <div class="relative h-64 overflow-hidden">
                    <div class="w-full h-full bg-gradient-to-br from-brand-200 to-brand-300 flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                        <i class="fas fa-building text-4xl text-brand-600"></i>
                    </div>
                    
                    <!-- Badges -->
                    <div class="absolute top-4 left-4 flex flex-col gap-2">
                        <% if (project.featured) { %>
                        <span class="bg-gradient-to-r from-amber-400 to-amber-500 text-white text-xs font-semibold px-3 py-1 rounded-full flex items-center">
                            <i class="fas fa-star mr-1"></i>Featured
                        </span>
                        <% } %>
                        <span class="bg-brand-500 text-white text-xs font-semibold px-3 py-1 rounded-full capitalize">
                            <%= project.status %>
                        </span>
                    </div>
                    
                    <!-- Price -->
                    <div class="absolute bottom-4 right-4">
                        <span class="bg-navy-800/90 text-white text-sm font-bold px-4 py-2 rounded-xl backdrop-blur-sm">
                            <%= project.getFormattedPrice() %>
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                        <h3 class="text-xl font-bold text-navy-800 group-hover:text-brand-700 transition-colors duration-300">
                            <%= project.title %>
                        </h3>
                    </div>
                    
                    <% if (project.location && project.location.city) { %>
                    <div class="flex items-center text-gray-600 mb-4">
                        <i class="fas fa-map-marker-alt text-brand-500 mr-2"></i>
                        <span class="text-sm"><%= project.location.city %></span>
                    </div>
                    <% } %>
                    
                    <p class="text-gray-600 text-sm mb-4 leading-relaxed">
                        <%= project.shortDescription || project.description.substring(0, 100) + '...' %>
                    </p>
                    
                    <% if (project.specifications && (project.specifications.bedrooms || project.specifications.bathrooms || project.specifications.area)) { %>
                    <div class="grid grid-cols-3 gap-4 p-4 bg-gray-50 rounded-xl mb-4">
                        <% if (project.specifications.bedrooms) { %>
                        <div class="text-center">
                            <i class="fas fa-bed text-brand-500 mb-1"></i>
                            <div class="text-sm font-semibold text-navy-800"><%= project.specifications.bedrooms %></div>
                            <div class="text-xs text-gray-600">Beds</div>
                        </div>
                        <% } %>
                        <% if (project.specifications.bathrooms) { %>
                        <div class="text-center">
                            <i class="fas fa-bath text-brand-500 mb-1"></i>
                            <div class="text-sm font-semibold text-navy-800"><%= project.specifications.bathrooms %></div>
                            <div class="text-xs text-gray-600">Baths</div>
                        </div>
                        <% } %>
                        <% if (project.specifications.area) { %>
                        <div class="text-center">
                            <i class="fas fa-ruler-combined text-brand-500 mb-1"></i>
                            <div class="text-sm font-semibold text-navy-800"><%= project.specifications.area.split(' ')[0] %></div>
                            <div class="text-xs text-gray-600">Sq Ft</div>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
                    
                    <div class="flex gap-2">
                        <a href="/projects/<%= project.slug %>" class="flex-1 group bg-gradient-to-r from-brand-500 to-brand-600 text-white py-3 rounded-xl font-semibold hover:from-brand-600 hover:to-brand-700 transition-all duration-300 transform hover:scale-105 text-center">
                            <i class="fas fa-eye mr-2"></i>View Details
                        </a>
                        <a href="/contact?property=<%= project.slug %>" class="bg-navy-100 text-navy-800 p-3 rounded-xl hover:bg-navy-200 transition-colors duration-300">
                            <i class="fas fa-envelope"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12 animate-on-scroll">
            <a href="/projects" class="group bg-navy-800 text-white px-8 py-4 rounded-xl font-semibold hover:bg-navy-900 transition-all duration-300 transform hover:scale-105 inline-flex items-center">
                View All Properties
                <i class="fas fa-arrow-right ml-3 group-hover:translate-x-1 transition-transform duration-300"></i>
            </a>
        </div>
    </div>
</section>
<% } %>

