<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5" style="min-height: 70vh; background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    <%= hero.title || 'Find Your Dream Property' %>
                </h1>
                <p class="lead mb-4">
                    <%= hero.subtitle || 'Discover premium properties and exceptional real estate services with Mayor-K Prime Properties.' %>
                </p>
                <div class="hero-buttons">
                    <a href="/projects" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-search me-2"></i><%= hero.cta || 'Browse Properties' %>
                    </a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-phone me-2"></i>Get Consultation
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <img src="/images/hero-house.png" alt="Prime Properties" class="img-fluid" style="max-height: 400px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">Why Choose Mayor-K Prime?</h2>
                <p class="lead text-muted">We provide comprehensive real estate solutions with unmatched expertise and personalized service.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-medal fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Expert Team</h5>
                    <p class="text-muted">Experienced professionals with deep market knowledge and proven track record.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-handshake fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Personalized Service</h5>
                    <p class="text-muted">Tailored solutions that meet your specific needs and preferences.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Market Insights</h5>
                    <p class="text-muted">Stay informed with the latest market trends and property valuations.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fs-1 text-primary"></i>
                    </div>
                    <h5 class="fw-bold">Trusted Process</h5>
                    <p class="text-muted">Transparent, secure, and hassle-free real estate transactions.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Services -->
<% if (featuredServices && featuredServices.length > 0) { %>
<section class="services-section bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">Our Services</h2>
                <p class="lead text-muted">Comprehensive real estate solutions for all your property needs.</p>
            </div>
        </div>
        <div class="row g-4">
            <% featuredServices.forEach(service => { %>
            <div class="col-lg-4 col-md-6">
                <div class="service-card card h-100 shadow-sm">
                    <div class="card-img-container">
                        <img src="<%= service.image %>" class="card-img-top" alt="<%= service.title %>" style="height: 200px; object-fit: cover;">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="service-icon mb-3">
                            <i class="fas fa-<%= service.icon %> fs-3 text-primary"></i>
                        </div>
                        <h5 class="card-title fw-bold"><%= service.title %></h5>
                        <p class="card-text text-muted flex-grow-1"><%= service.shortDescription || service.description.substring(0, 120) + '...' %></p>
                        <a href="/services/<%= service.slug %>" class="btn btn-outline-primary mt-auto">
                            Learn More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <div class="text-center mt-4">
            <a href="/services" class="btn btn-primary btn-lg">
                View All Services <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>
<% } %>

<!-- Featured Projects -->
<% if (featuredProjects && featuredProjects.length > 0) { %>
<section class="projects-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">Featured Properties</h2>
                <p class="lead text-muted">Discover our handpicked selection of premium properties.</p>
            </div>
        </div>
        <div class="row g-4">
            <% featuredProjects.forEach(project => { %>
                <% const primaryImage = project.getPrimaryImage(); %>
            <div class="col-lg-6 col-xl-3">
                <div class="project-card card h-100 shadow-sm">
                    <div class="card-img-container position-relative">
                        <img src="<%= primaryImage.url %>" class="card-img-top" alt="<%= project.title %>" style="height: 250px; object-fit: cover;">
                        <div class="project-badges position-absolute top-0 start-0 m-2">
                            <% if (project.featured) { %>
                            <span class="badge bg-warning text-dark">Featured</span>
                            <% } %>
                            <span class="badge bg-primary"><%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %></span>
                        </div>
                        <div class="project-price position-absolute bottom-0 end-0 m-2">
                            <span class="badge bg-dark fs-6"><%= project.getFormattedPrice() %></span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold"><%= project.title %></h5>
                        <p class="card-text text-muted small mb-2">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <%= project.location.city || 'Prime Location' %>
                        </p>
                        <p class="card-text flex-grow-1"><%= project.shortDescription || project.description.substring(0, 100) + '...' %></p>
                        
                        <% if (project.specifications) { %>
                        <div class="project-specs mb-3">
                            <div class="row text-center">
                                <% if (project.specifications.bedrooms) { %>
                                <div class="col-4">
                                    <small class="text-muted">
                                        <i class="fas fa-bed"></i><br>
                                        <%= project.specifications.bedrooms %> Beds
                                    </small>
                                </div>
                                <% } %>
                                <% if (project.specifications.bathrooms) { %>
                                <div class="col-4">
                                    <small class="text-muted">
                                        <i class="fas fa-bath"></i><br>
                                        <%= project.specifications.bathrooms %> Baths
                                    </small>
                                </div>
                                <% } %>
                                <% if (project.specifications.area) { %>
                                <div class="col-4">
                                    <small class="text-muted">
                                        <i class="fas fa-ruler-combined"></i><br>
                                        <%= project.specifications.area %>
                                    </small>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                        
                        <a href="/projects/<%= project.slug %>" class="btn btn-primary mt-auto">
                            View Details <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <div class="text-center mt-4">
            <a href="/projects" class="btn btn-outline-primary btn-lg">
                View All Properties <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>
<% } %>

<!-- CTA Section -->
<section class="cta-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="fw-bold mb-2">Ready to Find Your Perfect Property?</h3>
                <p class="mb-0 lead">Let our experts help you navigate the real estate market and find your dream home today.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/contact" class="btn btn-light btn-lg">
                    <i class="fas fa-phone me-2"></i>Contact Us Now
                </a>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
