<%- include('partials/header') %>

<!-- Page Header -->
<section class="page-header bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-4 fw-bold mb-3"><%= pageHeader.title %></h1>
                <p class="lead text-muted"><%= pageHeader.subtitle %></p>
                <nav aria-label="breadcrumb" class="mt-4">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                        <li class="breadcrumb-item active">Projects</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Filter Section -->
<section class="filter-section py-4 bg-white shadow-sm">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h6 class="mb-2 fw-bold">Filter Properties:</h6>
                <div class="filter-buttons">
                    <a href="/projects" class="btn <%= currentCategory === 'all' ? 'btn-primary' : 'btn-outline-primary' %> btn-sm me-2 mb-2">
                        All Properties
                    </a>
                    <% if (categories && categories.length > 0) { %>
                        <% categories.forEach(category => { %>
                        <a href="/projects?category=<%= category %>" class="btn <%= currentCategory === category ? 'btn-primary' : 'btn-outline-primary' %> btn-sm me-2 mb-2">
                            <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                        </a>
                        <% }); %>
                    <% } %>
                    <a href="/projects?featured=true" class="btn <%= currentCategory === 'featured' ? 'btn-warning' : 'btn-outline-warning' %> btn-sm me-2 mb-2">
                        <i class="fas fa-star me-1"></i>Featured
                    </a>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="results-info">
                    <span class="text-muted">
                        <% if (projects && projects.length > 0) { %>
                            Showing <%= projects.length %> <%= projects.length === 1 ? 'property' : 'properties' %>
                        <% } else { %>
                            No properties found
                        <% } %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="projects-grid py-5">
    <div class="container">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <%= error %>
        </div>
        <% } %>

        <% if (projects && projects.length > 0) { %>
        <div class="row g-4">
            <% projects.forEach((project, index) => { %>
                <% const primaryImage = project.getPrimaryImage(); %>
            <div class="col-lg-4 col-md-6">
                <div class="project-card card h-100 shadow-sm hover-lift">
                    <div class="card-img-container position-relative">
                        <img src="<%= primaryImage.url %>" class="card-img-top" alt="<%= project.title %>" style="height: 280px; object-fit: cover;">
                        
                        <!-- Project Badges -->
                        <div class="project-badges position-absolute top-0 start-0 m-3">
                            <% if (project.featured) { %>
                            <span class="badge bg-warning text-dark mb-1 d-block">
                                <i class="fas fa-star me-1"></i>Featured
                            </span>
                            <% } %>
                            <span class="badge bg-primary d-block">
                                <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                            </span>
                        </div>
                        
                        <!-- Price Badge -->
                        <div class="project-price position-absolute bottom-0 end-0 m-3">
                            <span class="badge bg-dark fs-6 px-3 py-2">
                                <%= project.getFormattedPrice() %>
                            </span>
                        </div>
                        
                        <!-- Category Tags -->
                        <div class="project-categories position-absolute bottom-0 start-0 m-3">
                            <% project.category.slice(0, 2).forEach(cat => { %>
                            <span class="badge bg-secondary me-1">
                                <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                            </span>
                            <% }); %>
                        </div>
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <div class="project-header mb-3">
                            <h5 class="card-title fw-bold mb-2"><%= project.title %></h5>
                            
                            <!-- Location -->
                            <% if (project.location && (project.location.city || project.location.address)) { %>
                            <p class="card-text text-muted small mb-0">
                                <i class="fas fa-map-marker-alt me-1 text-primary"></i>
                                <%= project.location.city || project.location.address %>
                            </p>
                            <% } %>
                        </div>
                        
                        <!-- Description -->
                        <p class="card-text text-muted mb-3 flex-grow-1">
                            <%= project.shortDescription || (project.description.length > 120 ? project.description.substring(0, 117) + '...' : project.description) %>
                        </p>
                        
                        <!-- Specifications -->
                        <% if (project.specifications && (project.specifications.bedrooms || project.specifications.bathrooms || project.specifications.area)) { %>
                        <div class="project-specs mb-3 p-3 bg-light rounded">
                            <div class="row text-center">
                                <% if (project.specifications.bedrooms) { %>
                                <div class="col-4">
                                    <div class="spec-item">
                                        <i class="fas fa-bed text-primary"></i>
                                        <div class="small fw-bold"><%= project.specifications.bedrooms %></div>
                                        <div class="small text-muted">Beds</div>
                                    </div>
                                </div>
                                <% } %>
                                <% if (project.specifications.bathrooms) { %>
                                <div class="col-4">
                                    <div class="spec-item">
                                        <i class="fas fa-bath text-primary"></i>
                                        <div class="small fw-bold"><%= project.specifications.bathrooms %></div>
                                        <div class="small text-muted">Baths</div>
                                    </div>
                                </div>
                                <% } %>
                                <% if (project.specifications.area) { %>
                                <div class="col-4">
                                    <div class="spec-item">
                                        <i class="fas fa-ruler-combined text-primary"></i>
                                        <div class="small fw-bold"><%= project.specifications.area.split(' ')[0] %></div>
                                        <div class="small text-muted">Sq Ft</div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                        
                        <!-- Action Buttons -->
                        <div class="project-actions d-flex gap-2 mt-auto">
                            <a href="/projects/<%= project.slug %>" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                            <a href="/contact?property=<%= project.slug %>" class="btn btn-outline-primary">
                                <i class="fas fa-envelope"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        
        <% } else { %>
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-building fs-1 text-muted mb-3"></i>
                <h4 class="text-muted">No Properties Found</h4>
                <% if (currentCategory !== 'all') { %>
                <p class="text-muted">No properties match your current filter. Try browsing all properties.</p>
                <a href="/projects" class="btn btn-primary">
                    <i class="fas fa-list me-2"></i>View All Properties
                </a>
                <% } else { %>
                <p class="text-muted">We're working on adding new properties. Please check back soon!</p>
                <a href="/contact" class="btn btn-primary">
                    <i class="fas fa-envelope me-2"></i>Contact Us for Information
                </a>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="fw-bold mb-2">Don't See What You're Looking For?</h3>
                <p class="mb-0 lead">We have access to exclusive off-market properties. Let us help you find your perfect match.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/contact" class="btn btn-light btn-lg">
                    <i class="fas fa-search me-2"></i>Custom Search
                </a>
            </div>
        </div>
    </div>
</section>

<style>
.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.15) !important;
    transition: all 0.3s ease;
}

.project-card .card-img-top {
    transition: transform 0.3s ease;
}

.project-card:hover .card-img-top {
    transform: scale(1.05);
}

.spec-item {
    text-align: center;
}

.project-badges .badge,
.project-categories .badge,
.project-price .badge {
    backdrop-filter: blur(10px);
}
</style>

<%- include('partials/footer') %>
