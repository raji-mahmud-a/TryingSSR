<%- include('partials/header') %>

<section class="error-page py-5" style="min-height: 60vh;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="error-content">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle fs-1 text-warning"></i>
                    </div>
                    <h1 class="fw-bold mb-3">Something Went Wrong</h1>
                    <p class="lead text-muted mb-4">We're experiencing a temporary issue. Please try again later.</p>
                    
                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                    
                    <% if (typeof error !== 'undefined' && error.stack) { %>
                    <div class="error-details mt-4">
                        <details>
                            <summary class="btn btn-outline-secondary btn-sm">Technical Details</summary>
                            <pre class="text-start mt-3 p-3 bg-light border rounded"><%= error.stack %></pre>
                        </details>
                    </div>
                    <% } %>
                    
                    <div class="error-actions mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary btn-lg me-3">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
